{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "linux": {
        "options": {
            "shell": {
                "executable": "bash",
                "args": [
                    "--init-file",
                    "venv/bin/activate",
                    "-ci",
                ]
            }
        },
    },
    "tasks": [
        {
            "label": "prebuild",
            "type": "shell",
            "command": "black . && pytest tests/",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/"
            },
            "presentation": {
                "reveal": "silent",
            }
        }
    ]
}